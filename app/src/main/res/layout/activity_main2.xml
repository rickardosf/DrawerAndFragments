<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.fiap.exercicios.drawerandfragments.rm77078.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/telafundo"
        android:id="@+id/imageView2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/carros_antigos"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="40sp"
            android:textColor="#FFFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/ricardo_santos_filho"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="#FFFF"
            android:layout_marginTop="330dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/rm77078"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="#FFFF"
            />
    </LinearLayout>

</FrameLayout>
